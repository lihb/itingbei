<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_item_selector">

    <LinearLayout
        android:id="@+id/msg_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/voice_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/msg_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/catetory_heart"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/msg_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/msg_image"
                android:layout_marginLeft="15dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="标题" />

            <TextView
                android:id="@+id/msg_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="日期" />

            <TextView
                android:id="@+id/msg_content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg_title_txt"
                android:layout_toRightOf="@+id/msg_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="xxxx" />


            <com.lihb.babyvoice.customview.DividerLine
                android:id="@+id/split_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/voice_title_txt"
                app:lineColor="@color/voice_line_color" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>