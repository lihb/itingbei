<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gender_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/baby_info_txt_shape"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="性别     |"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/gender_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/cursor_shape"
            android:inputType="textFilter"
            android:paddingLeft="4dp"
            android:text="男"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:maxLength="10"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="   孩"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/heaart_count_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/baby_info_txt_shape"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="心跳     |"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/heart_count_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/cursor_shape"
            android:inputType="number"
            android:paddingLeft="4dp"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:maxLength="10"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="   次"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fontanel_size_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/baby_info_txt_shape"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="囟门     |"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/fontanel_size_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/cursor_shape"
            android:inputType="number"
            android:paddingLeft="4dp"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:maxLength="10"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="   CM"
            android:textColor="@color/text_black"
            android:textSize="14dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>