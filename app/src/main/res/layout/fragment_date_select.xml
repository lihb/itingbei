<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.lihb.babyvoice.customview.TitleBar
        android:id="@+id/title_bar"
        app:leftDrawable="@mipmap/back"
        app:leftText="宝宝信息设置"
        app:leftTextColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/padding_top" />

    <ImageView
        android:id="@+id/label_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        android:src="@mipmap/head_portrait" />

    <EditText
        android:id="@+id/label_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="#666666"
        android:hint="请输入宝宝昵称..." />

    <TextView
        android:id="@+id/date_label_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="请选择宝宝出生日期"
        android:textSize="18dp"
        android:textColor="#666666" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:calendarViewShown="false"
        android:layout_marginTop="10dp"
        android:datePickerMode="spinner"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/date_sel_done_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/done_txt_shape"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/done"
        android:textSize="15dp"
        android:textColor="@android:color/white" />

</LinearLayout>