<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/record_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/catetory_heart"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/pick_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pick_normal"
        android:layout_alignRight="@+id/record_img"
        android:layout_marginRight="-3dp" />

    <TextView
        android:id="@+id/record_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_img"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#333333"
        android:textSize="12dp"
        android:text="胎心音音xxxxx" />

</RelativeLayout>