<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/heartbeat_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.3dp"
        android:layout_marginTop="23.3dp"
        android:src="@mipmap/mind_map" />

    <TextView
        android:id="@+id/heartbeat_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/round_rect_top"
        android:gravity="center_vertical"
        android:text="心跳次数  | 63（Heart Beat）"
        android:textColor="@color/text_black"
        android:textSize="12sp" />


    <RelativeLayout
        android:id="@+id/heartbeat_content_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/health_show_bottom_shape">

        <TextView
            android:id="@+id/heartbeat_label_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="诊断建议   |"
            android:textColor="@color/text_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/heartbeat_diagnose_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heartbeat_label_txt"
            android:layout_marginTop="14.3dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:text="非常健康，继续保持。"
            android:textColor="@color/coler_55555"
            android:textSize="10.7sp" />

    </RelativeLayout>


</LinearLayout>